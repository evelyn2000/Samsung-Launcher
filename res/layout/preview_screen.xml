<com.android.qstwzlauncher.QsPreviewScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res/com.android.qstwzlauncher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/qs_workspace_preview_screen_paddingtop"
    launcher:maxScreenCount="@integer/config_maxScreenCount"
    >

    <LinearLayout android:tag="rows1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/qs_workspace_preview_ver_margin">
            

    </LinearLayout>
    
    <LinearLayout android:tag="rows2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/qs_workspace_preview_ver_margin"
            android:layout_marginBottom="@dimen/qs_workspace_preview_ver_margin">
		

    </LinearLayout>
    
    <LinearLayout android:tag="rows3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/qs_workspace_preview_ver_margin"
            >
		
		
    </LinearLayout>
    
    <!-- delete target -->
    
    <ImageView android:tag="drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/hotseat_icon_delete"
        android:background="@drawable/bottombar_remove_screen_bg"/>
</com.android.qstwzlauncher.QsPreviewScreen>

